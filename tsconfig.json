{
  "extends": "@sapphire/ts-config/",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
			"#root/*": ["*"],
			"#lib/*": ["src/lib/*"],
			"#types/*": ["lib/types/*"],
		},
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["src", "src/languages/**/*.json",],
  "exclude": ["node_modules"]
}
